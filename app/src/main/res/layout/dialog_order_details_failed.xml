<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_screen_top_corner">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_label_dialog_order_failed_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:letterSpacing="0.05"
        android:padding="@dimen/sizeSixteen"
        android:singleLine="true"
        android:text="Failed Reason *"
        android:textAllCaps="true"
        android:textAppearance="@style/MyTextAppearanceBold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list_view_dialog_order_failed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_dialog_order_failed_reason" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/btn_cancel_dialog_order_failed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sizeSixteen"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:padding="@dimen/sizeTwelve"
        android:text="Cancel"
        android:textAllCaps="true"
        android:textAppearance="@style/MyTextAppearance"
        android:textColor="@color/colorGreyDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_submit_dialog_order_failed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_view_dialog_order_failed" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit_dialog_order_failed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sizeSixteen"
        android:background="@drawable/button_bg_primary"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:text="@string/label_submit"
        android:textAllCaps="true"
        android:textAppearance="@style/MyTextAppearance"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_cancel_dialog_order_failed"
        app:layout_constraintTop_toBottomOf="@+id/list_view_dialog_order_failed" />


</androidx.constraintlayout.widget.ConstraintLayout>