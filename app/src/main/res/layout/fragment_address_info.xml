<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingTop="@dimen/sizeTwentyTwo">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_error_onboard_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/sizeThirtyTwo"
        android:textAppearance="@style/MyTextAppearance"
        android:paddingEnd="@dimen/sizeThirtyTwo"
        android:textColor="@color/colorRedPrimary"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Location-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_onboard_address_location"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sizeThirtyTwo"
        android:layout_marginTop="@dimen/sizeThirtyTwo"
        android:layout_marginEnd="@dimen/sizeSixteen"
        android:layout_marginBottom="@dimen/sizeThirtyTwo"
        app:boxStrokeColor="@color/black"
        app:hintTextAppearance="@style/MyTextAppearance"
        app:hintTextColor="@color/colorGreyDark"
        app:layout_constraintEnd_toStartOf="@+id/img_location_onboard_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_error_onboard_address"
        app:startIconDrawable="@drawable/ic_location">

        <!--this is the actual edit text which takes the input-->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_onboard_address_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="Location *"
            android:inputType="text"
            android:letterSpacing="0.05"
            android:paddingStart="@dimen/sizeSixteen"
            android:paddingTop="@dimen/sizeEighteen"
            android:paddingEnd="@dimen/sizeSixteen"
            android:paddingBottom="@dimen/sizeSixteen"
            android:singleLine="true"
            android:textAppearance="@style/MyTextAppearance"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/body_regular"
            app:hintTextColor="@color/colorGreyDark" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/img_location_onboard_address"
        android:layout_width="@dimen/sizeForty"
        android:layout_height="@dimen/sizeForty"
        android:layout_marginStart="@dimen/sizeEight"
        android:layout_marginEnd="@dimen/sizeThirtyTwo"
        android:background="@null"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/ic_gps_found"
        app:layout_constraintBottom_toBottomOf="@id/input_onboard_address_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/input_onboard_address_location" />

    <!--Email-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_onboard_address_first"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sizeThirtyTwo"
        app:boxStrokeColor="@color/black"
        app:hintTextAppearance="@style/MyTextAppearance"
        app:hintTextColor="@color/colorGreyDark"
        app:layout_constraintTop_toBottomOf="@id/input_onboard_address_location"
        app:startIconDrawable="@drawable/ic_address">

        <!--this is the actual edit text which takes the input-->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_onboard_address_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="Address 1"
            android:inputType="text"
            android:letterSpacing="0.05"
            android:paddingStart="@dimen/sizeSixteen"
            android:paddingTop="@dimen/sizeEighteen"
            android:paddingEnd="@dimen/sizeSixteen"
            android:paddingBottom="@dimen/sizeSixteen"
            android:singleLine="true"
            android:textAppearance="@style/MyTextAppearance"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/body_regular"
            app:hintTextColor="@color/colorGreyDark" />

    </com.google.android.material.textfield.TextInputLayout>

    <!--Additional mobile no-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_onboard_address_second"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sizeThirtyTwo"
        app:boxStrokeColor="@color/black"
        app:hintTextAppearance="@style/MyTextAppearance"
        app:hintTextColor="@color/colorGreyDark"
        app:layout_constraintTop_toBottomOf="@id/input_onboard_address_first"
        app:startIconDrawable="@drawable/ic_address">

        <!--this is the actual edit text which takes the input-->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_onboard_address_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="Address 2"
            android:inputType="text"
            android:letterSpacing="0.05"
            android:maxLength="10"
            android:paddingStart="@dimen/sizeSixteen"
            android:paddingTop="@dimen/sizeEighteen"
            android:paddingEnd="@dimen/sizeSixteen"
            android:paddingBottom="@dimen/sizeSixteen"
            android:singleLine="true"
            android:textAppearance="@style/MyTextAppearance"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/body_regular"
            app:hintTextColor="@color/colorGreyDark" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_info_onboard_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/MyTextAppearance"
        android:padding="@dimen/sizeSixteen"
        android:paddingStart="@dimen/sizeThirtyTwo"
        android:paddingEnd="@dimen/sizeThirtyTwo"
        android:text="( * ) This fields are mandatory to give us."
        android:textColor="@color/colorGreyDark"
        app:layout_constraintBottom_toTopOf="@+id/tv_onboard_address_next" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_onboard_address_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGreenPrimary"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:padding="@dimen/sizeSixteen"
        android:text="Next"
        android:textAllCaps="true"
        android:textAppearance="@style/MyTextAppearanceBold"
        android:textColor="@color/white"
        android:textSize="@dimen/body_regular"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>