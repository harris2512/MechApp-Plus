<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteSmoke">

    <!--Services Search-->
    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/edt_search_add_skill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sizeSixteen"
        android:background="@drawable/bg_fill_gray_editext"
        android:completionThreshold="2"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="@dimen/sizeEight"
        android:drawableTint="@color/colorGreyLight"
        android:hint="search here.."
        android:inputType="text"
        android:letterSpacing="0.05"
        android:padding="@dimen/sizeTwelve"
        android:textAppearance="@style/MyTextAppearance"
        android:textColor="@color/black"
        android:textColorHint="@color/colorGreyLight"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="m" />

    <!--Popular Services-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_popular_services"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/sizeSixteen"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_search_add_skill" />

</androidx.constraintlayout.widget.ConstraintLayout>