<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".screen.activity.order_details.OrderDetailsActivity">

    <!--Toolbar-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_order_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_onboard_back"
            android:layout_width="@dimen/sizeFortySix"
            android:layout_height="@dimen/sizeFortySix"
            android:layout_margin="@dimen/sizeEight"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:contentDescription="@string/contentDescription"
            android:focusable="true"
            android:padding="@dimen/sizeEight"
            android:src="@drawable/ic_back"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.project.readyassist_mechapp.utils.MyAppBold
            android:id="@+id/tv_label_onboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sizeEight"
            android:gravity="center_vertical"
            android:letterSpacing="0.05"
            android:text="#55989"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/headline_small"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img_onboard_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_onboard_back"
            app:layout_constraintTop_toTopOf="@+id/img_onboard_back" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_gray_screen_top_corner"
        android:paddingTop="@dimen/sizeFour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_order_details">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@+id/layout_order_details_swipe"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--Order Basic Details-->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_order_details_order_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sizeSixteen"
                    android:layout_marginTop="@dimen/sizeEight"
                    android:layout_marginEnd="@dimen/sizeSixteen"
                    android:letterSpacing="0.05"
                    android:paddingTop="@dimen/sizeEight"
                    android:paddingBottom="@dimen/sizeEight"
                    android:text="New Order"
                    android:textAllCaps="true"
                    android:textAppearance="@style/MyTextAppearanceBold"
                    android:textColor="@color/colorGreenPrimaryDark"
                    android:textSize="@dimen/body_regular"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_order_details_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sizeSixteen"
                    android:layout_marginEnd="@dimen/sizeSixteen"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:letterSpacing="0.05"
                    android:paddingTop="@dimen/sizeEight"
                    android:paddingBottom="@dimen/sizeEight"
                    android:text="07 jan 2021, 02:59 pm"
                    android:textAllCaps="true"
                    android:textAppearance="@style/MyTextAppearance"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_order_details_order_state" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_order_details_order_eta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sizeSixteen"
                    android:layout_marginEnd="@dimen/sizeSixteen"
                    android:background="@drawable/button_bg_primary"
                    android:clickable="true"
                    android:focusable="true"
                    android:letterSpacing="0.05"
                    android:paddingStart="@dimen/sizeEight"
                    android:paddingTop="@dimen/sizeFour"
                    android:paddingEnd="@dimen/sizeEight"
                    android:paddingBottom="@dimen/sizeFour"
                    android:text="0hr 3m"
                    android:textAppearance="@style/MyTextAppearance"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_order_details_order_state" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_order_details_vehicle_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sizeSixteen"
                    android:layout_marginTop="@dimen/sizeSixteen"
                    android:layout_marginEnd="@dimen/sizeSixteen"
                    android:background="@drawable/bg_edt_fill_grey_round_corner_black_stroke"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/sizeEight"
                    app:layout_constraintTop_toBottomOf="@+id/tv_order_details_order_eta">

                    <ImageView
                        android:id="@+id/img_order_details_vehicle_type"
                        android:layout_width="@dimen/sizeForty"
                        android:layout_height="@dimen/sizeForty"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginStart="@dimen/sizeEight"
                        android:layout_marginEnd="@dimen/sizeEight"
                        android:contentDescription="@string/contentDescription"
                        android:src="@drawable/ic_motorcycle"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_order_details_vehicle_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:letterSpacing="0.05"
                            android:text="ka02hn9686"
                            android:textAllCaps="true"
                            android:textAppearance="@style/MyTextAppearance"
                            android:textColor="@color/black" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_order_details_vehicle_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/sizeEight"
                            android:letterSpacing="0.05"
                            android:text="yamaha fazer v1"
                            android:textAllCaps="true"
                            android:textAppearance="@style/MyTextAppearance"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="@dimen/caption_regular" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_order_details_service_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/sizeSixteen"
                    android:layout_marginTop="@dimen/sizeSixteen"
                    android:layout_marginEnd="@dimen/sizeSixteen"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:letterSpacing="0.05"
                    android:paddingTop="@dimen/sizeEight"
                    android:paddingBottom="@dimen/sizeEight"
                    android:text="Battery Jump-Start"
                    android:textAllCaps="true"
                    android:textAppearance="@style/MyTextAppearanceBold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_order_details_vehicle_details" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_order_details_service_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/sizeSixteen"
                    android:layout_marginEnd="@dimen/sizeSixteen"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:letterSpacing="0.05"
                    android:maxLines="3"
                    android:text="@string/label_lorem_ipsum"
                    android:textAppearance="@style/MyTextAppearance"
                    android:textColor="@color/colorGreyDark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_order_details_service_name" />

                <!--Customer Contact Details-->
                <LinearLayout
                    android:id="@+id/linear_order_details_customer_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sizeSixteen"
                    android:layout_marginTop="@dimen/sizeSixteen"
                    android:layout_marginEnd="@dimen/sizeSixteen"
                    android:background="@drawable/bg_edt_fill_grey_round_corner_black_stroke"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_order_details_service_desc">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_order_details_customer_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.98"
                        android:letterSpacing="0.05"
                        android:padding="@dimen/sizeTwelve"
                        android:singleLine="true"
                        android:text="Jack Sparrow"
                        android:textAllCaps="true"
                        android:textAppearance="@style/MyTextAppearanceBold"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/img_order_details_customer_call"
                        android:layout_width="@dimen/sizeThirtySix"
                        android:layout_height="@dimen/sizeThirtySix"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/contentDescription"
                        android:padding="@dimen/sizeFour"
                        android:src="@drawable/ic_call_icon" />

                </LinearLayout>

                <!--Order Pick Location-->
                <LinearLayout
                    android:id="@+id/linear_order_details_pick_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sizeSixteen"
                    android:layout_marginTop="@dimen/sizeSixteen"
                    android:layout_marginEnd="@dimen/sizeSixteen"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@+id/linear_order_details_customer_details">

                    <ImageView
                        android:id="@+id/img_order_details_order_pick_location"
                        android:layout_width="@dimen/sizeThirty"
                        android:layout_height="@dimen/sizeThirty"
                        android:contentDescription="@string/contentDescription"
                        android:padding="@dimen/sizeSix"
                        android:src="@drawable/ic_pinned_location"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_order_details_order_pick_location" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_order_details_order_pick_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:letterSpacing="0.05"
                        android:maxLines="4"
                        android:paddingStart="@dimen/sizeEight"
                        android:paddingEnd="@dimen/sizeEight"
                        android:text="@string/label_dummy_address"
                        android:textAppearance="@style/MyTextAppearance"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/img_order_details_order_pick_location" />

                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_order_details_order_pick_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sizeSixteen"
                    android:layout_marginEnd="@dimen/sizeSixteen"
                    android:background="@drawable/bg_edt_fill_grey_round_corner_black_stroke"
                    android:clickable="true"
                    android:focusable="true"
                    android:letterSpacing="0.05"
                    android:paddingStart="@dimen/sizeSixteen"
                    android:paddingTop="@dimen/sizeFour"
                    android:paddingEnd="@dimen/sizeSixteen"
                    android:paddingBottom="@dimen/sizeFour"
                    android:text="13 km"
                    android:textAllCaps="true"
                    android:textAppearance="@style/MyTextAppearance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_regular"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/img_order_details_pick_nav_map"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_order_details_pick_nav_map" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_order_details_order_pick_km_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sizeSixteen"
                    android:layout_marginEnd="@dimen/sizeSixteen"
                    android:background="@drawable/bg_fill_water_green_corner_stroke_black_box"
                    android:clickable="true"
                    android:focusable="true"
                    android:letterSpacing="0.05"
                    android:paddingStart="@dimen/sizeSixteen"
                    android:paddingTop="@dimen/sizeFour"
                    android:paddingEnd="@dimen/sizeSixteen"
                    android:paddingBottom="@dimen/sizeFour"
                    android:text="8 hours 45 min"
                    android:textAppearance="@style/MyTextAppearance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_regular"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/img_order_details_pick_nav_map"
                    app:layout_constraintStart_toEndOf="@+id/tv_order_details_order_pick_km"
                    app:layout_constraintTop_toTopOf="@+id/img_order_details_pick_nav_map" />

                <ImageView
                    android:id="@+id/img_order_details_pick_nav_map"
                    android:layout_width="@dimen/sizeForty"
                    android:layout_height="@dimen/sizeForty"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/sizeSixteen"
                    android:layout_marginTop="@dimen/sizeThirtyTwo"
                    android:layout_marginEnd="@dimen/sizeSixteen"
                    android:background="@drawable/ic_oval_green"
                    android:clickable="true"
                    android:contentDescription="@string/contentDescription"
                    android:focusable="true"
                    android:padding="@dimen/sizeSix"
                    android:src="@drawable/ic_map_navigation"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linear_order_details_pick_location"
                    app:tint="@color/white" />

                <!--Order Vehicle Conformation-->
                <include
                    android:id="@+id/include_order_vehicle_confirmation"
                    layout="@layout/include_order_details_vehicle_confirmation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/img_order_details_pick_nav_map" />

                <!--Order POST Confirmation-->
                <include
                    android:id="@+id/include_order_details_order_completed"
                    layout="@layout/include_order_details_order_completed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sizeThirtyTwo"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/include_order_vehicle_confirmation" />

                <!--Order Payment-->
                <include
                    android:id="@+id/include_order_details_payment"
                    layout="@layout/include_order_details_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/include_order_details_order_completed" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


        <!--Order Swipe-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_order_details_swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/sizeSixteen"
            android:paddingBottom="@dimen/sizeSixteen"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/swipe_order_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progressDrawable="@drawable/seekbar_style_primary"
                android:splitTrack="false"
                android:thumb="@drawable/seekbar_custom_thumb"
                android:thumbOffset="-16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:targetApi="lollipop" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_new_order_swipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:text="Acknowledge"
                android:textAllCaps="true"
                android:textAppearance="@style/MyTextAppearanceBold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/swipe_order_details"
                app:layout_constraintEnd_toEndOf="@+id/swipe_order_details"
                app:layout_constraintStart_toStartOf="@+id/swipe_order_details"
                app:layout_constraintTop_toTopOf="@+id/swipe_order_details" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>