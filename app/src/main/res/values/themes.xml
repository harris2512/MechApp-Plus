<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="Theme.MechApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorAccent</item>

    </style>


    <!--Theme - StatusBar Transparent-->
    <style name="status_bar_transparent" parent="Theme.MechApp">
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>

        <!--Status Bar Color-->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <!--Theme - StatusBar Transparent-->
    <style name="status_bar_green" parent="Theme.MechApp">
        <item name="android:windowBackground">@color/colorGreenPrimary</item>
        <item name="android:textViewStyle">@style/PoppinsTextViewStyle</item>

        <!--Status Bar Color-->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorGreenPrimary
        </item>


    </style>

    <!--Font Family-->
    <style name="PoppinsTextViewStyle" parent="Widget.AppCompat.TextView">
        <!--        <item name="android:fontFamily">@font/roboto_regular</item>-->
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!--TextAppearance-->
    <style name="MyTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyTextAppearanceBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--ShapeableImageView-->
    <style name="shapeableCornerLight">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">5%</item>
        <item name="background">@color/colorWhiteSmoke</item>
    </style>


    <!--Radio Button-->
    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/PoppinsTextViewStyle</item>
        <item name="android:textViewStyle">@style/PoppinsTextViewStyle</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">
            @color/colorGreyDark
        </item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">
            @color/black
        </item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">
            @color/black
        </item>
    </style>


    <!--Bottom sheet Dialog-->
    <style name="TransparentDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:textAppearance">@style/PoppinsTextViewStyle</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--Custom Slider-->
    <style name="CustomSliderYellowLight" parent="Widget.MaterialComponents.Slider">
        <item name="android:textAppearance">@style/PoppinsTextViewStyle</item>
        <item name="thumbStrokeColor">@color/black</item>
        <item name="trackColor">@color/colorYellowLight</item>
        <item name="trackColorActive">@color/colorGreenPrimary</item>
    </style>

    <!--Custom MaterialButtonToggle-->
    <style name="MaterialToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorPrimary">@color/colorYellowPrimary</item>
        <item name="colorPrimaryDark">@color/colorYellowPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textAppearance">@style/PoppinsTextViewStyle</item>

    </style>


</resources>