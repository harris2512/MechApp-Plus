<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_gray_screen_top_corner"
        android:fitsSystemWindows="true"
        android:paddingStart="@dimen/sizeEight"
        android:paddingTop="@dimen/sizeSixteen"
        android:paddingEnd="@dimen/sizeEight">

        <!--Top Reports-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_top_reports_progress"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/progress_sales_target"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:indeterminateOnly="false"
                android:max="100"
                android:padding="@dimen/sizeSixteen"
                android:progress="70"
                android:progressDrawable="@drawable/circular_progress_bar" />

            <ProgressBar
                android:id="@+id/progress_sales_incentive"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:indeterminateOnly="false"
                android:max="100"
                android:padding="@dimen/sizeSixteen"
                android:progress="40"
                android:progressDrawable="@drawable/circular_progress_bar" />

            <ProgressBar
                android:id="@+id/progress_sales_ranking"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:indeterminateOnly="false"
                android:max="100"
                android:padding="@dimen/sizeSixteen"
                android:progress="10"
                android:progressDrawable="@drawable/circular_progress_bar" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--Reports Value-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_top_reports_value"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="@id/linear_top_reports_progress"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_dashboard_progress_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="70.0 %"
                android:textAppearance="@style/MyTextAppearanceBold"
                android:textColor="@color/black" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_dashboard_progress_incentive_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="1450"
                android:textAppearance="@style/MyTextAppearanceBold"
                android:textColor="@color/black" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_dashboard_progress_ranking_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="87"
                android:textAppearance="@style/MyTextAppearanceBold"
                android:textColor="@color/black" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--Reports Label-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_top_reports_label"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@id/linear_top_reports_progress">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Target"
                android:textAppearance="@style/MyTextAppearanceBold"
                android:textColor="@color/black" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Incentive"
                android:textAppearance="@style/MyTextAppearanceBold"
                android:textColor="@color/black" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Ranking"
                android:textAppearance="@style/MyTextAppearanceBold"
                android:textColor="@color/black" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--Statistics Details-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_top_reports_statistics"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/sizeFortySix"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@id/linear_top_reports_label">

            <!--Cash Received-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_dashboard_cash_received"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sizeEight"
                android:layout_weight="1"
                android:background="@drawable/bg_edt_fill_grey_round_corner_yellow_stroke"
                android:orientation="vertical"
                android:paddingStart="@dimen/sizeFour"
                android:paddingTop="@dimen/sizeTwelve"
                android:paddingEnd="@dimen/sizeFour"
                android:paddingBottom="@dimen/sizeTwelve">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_dashboard_cash_received"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:letterSpacing="0.05"
                    android:singleLine="true"
                    android:text="Rs. 00.00"
                    android:textAppearance="@style/MyTextAppearanceBold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/over_line_regular" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sizeFour"
                    android:gravity="center_horizontal|center_vertical"
                    android:letterSpacing="0.05"
                    android:singleLine="true"
                    android:text="Cash Received"
                    android:textAppearance="@style/MyTextAppearance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/over_line_regular" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!--Current Stocks-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_dashboard_current_stock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sizeEight"
                android:layout_weight="1"
                android:background="@drawable/bg_edt_fill_grey_round_corner_yellow_stroke"
                android:orientation="vertical"
                android:paddingStart="@dimen/sizeFour"
                android:paddingTop="@dimen/sizeTwelve"
                android:paddingEnd="@dimen/sizeFour"
                android:paddingBottom="@dimen/sizeTwelve">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_dashboard_current_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:letterSpacing="0.05"
                    android:singleLine="true"
                    android:text="0"
                    android:textAppearance="@style/MyTextAppearanceBold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/over_line_regular" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sizeFour"
                    android:gravity="center_horizontal|center_vertical"
                    android:letterSpacing="0.05"
                    android:singleLine="true"
                    android:text="Current Stock"
                    android:textAppearance="@style/MyTextAppearance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/over_line_regular" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!--Sub-seller Count-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_dashboard_seller_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sizeEight"
                android:layout_weight="1"
                android:background="@drawable/bg_edt_fill_grey_round_corner_yellow_stroke"
                android:orientation="vertical"
                android:paddingStart="@dimen/sizeFour"
                android:paddingTop="@dimen/sizeTwelve"
                android:paddingEnd="@dimen/sizeFour"
                android:paddingBottom="@dimen/sizeTwelve">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_dashboard_seller_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:letterSpacing="0.05"
                    android:singleLine="true"
                    android:text="0"
                    android:textAppearance="@style/MyTextAppearanceBold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/over_line_regular" />

                <TextView
                    style="@style/MyTextAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sizeFour"
                    android:gravity="center_horizontal|center_vertical"
                    android:letterSpacing="0.05"
                    android:singleLine="true"
                    android:text="Total Sale"
                    android:textColor="@color/black"
                    android:textSize="@dimen/over_line_regular" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--Reports-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_reports_sales"
            android:layout_width="@dimen/sizeHundred"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/sizeEight"
            android:layout_marginTop="@dimen/sizeThirtyTwo"
            android:layout_marginEnd="@dimen/sizeEight"
            android:background="@drawable/bg_white_screen_corner"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_top_reports_statistics">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/sizeForty"
                android:layout_height="@dimen/sizeForty"
                android:background="@drawable/bg_oval_gradient_border"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/sizeSix"
                android:src="@drawable/ic_reports_icon"
                android:tint="@color/white" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sizeEight"
                android:gravity="center_horizontal|center_vertical"
                android:letterSpacing="0.05"
                android:padding="@dimen/sizeFour"
                android:text="Reports"
                android:textAppearance="@style/MyTextAppearanceBold"
                android:textColor="@color/black"
                android:textSize="@dimen/caption_regular" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--Scan-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_reports_scan"
            android:layout_width="@dimen/sizeHundred"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/sizeEight"
            android:layout_marginTop="@dimen/sizeThirtyTwo"
            android:layout_marginEnd="@dimen/sizeEight"
            android:background="@drawable/bg_white_screen_corner"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_top_reports_statistics">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/sizeForty"
                android:layout_height="@dimen/sizeForty"
                android:background="@drawable/bg_oval_gradient_border"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/sizeEight"
                android:src="@drawable/ic_qr_code"
                android:tint="@color/white" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sizeEight"
                android:gravity="center_horizontal|center_vertical"
                android:letterSpacing="0.05"
                android:padding="@dimen/sizeFour"
                android:text="Scan"
                android:textAppearance="@style/MyTextAppearanceBold"
                android:textColor="@color/black"
                android:textSize="@dimen/caption_regular" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--Support-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_reports_digital_sale"
            android:layout_width="@dimen/sizeHundred"
            android:layout_height="120dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/sizeEight"
            android:layout_marginTop="@dimen/sizeThirtyTwo"
            android:layout_marginEnd="@dimen/sizeEight"
            android:background="@drawable/bg_white_screen_corner"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_top_reports_statistics">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/sizeForty"
                android:layout_height="@dimen/sizeForty"
                android:background="@drawable/bg_oval_gradient_border"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/sizeSix"
                android:src="@drawable/ic_digital_sale"
                android:tint="@color/white" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sizeEight"
                android:gravity="center_horizontal|center_vertical"
                android:letterSpacing="0.05"
                android:padding="@dimen/sizeFour"
                android:text="Digital Sale"
                android:textAppearance="@style/MyTextAppearanceBold"
                android:textColor="@color/black"
                android:textSize="@dimen/caption_regular" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_manual_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sizeThirtyTwo"
            android:layout_marginTop="@dimen/sizeFortySix"
            android:layout_marginEnd="@dimen/sizeThirtyTwo"
            android:background="@drawable/bg_edt_fill_grey_round_corner_black_stroke"
            android:gravity="center_vertical|start"
            android:hint="Enter manual code"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textCapCharacters"
            android:letterSpacing="0.05"
            android:padding="@dimen/sizeTwelve"
            android:singleLine="true"
            android:textAppearance="@style/MyTextAppearanceBold"
            android:textColor="@color/black"
            android:textColorHint="@color/colorGreyDark"
            android:textSize="@dimen/body_regular"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/btn_manual_code_proceed"
            app:layout_constraintTop_toBottomOf="@+id/linear_reports_sales" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_manual_code_proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/sizeThirtyTwo"
            android:background="@drawable/button_bg_secondary"
            android:gravity="center_horizontal|center_vertical"
            android:letterSpacing="0.2"
            android:paddingStart="@dimen/sizeFortySix"
            android:paddingEnd="@dimen/sizeFortySix"
            android:text="Proceed"
            android:textAllCaps="true"
            android:textAppearance="@style/MyTextAppearanceBold"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/edt_manual_barcode" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>