<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".screen.activity.onboard.OnboardActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linear_onboard_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_onboard_back"
            android:layout_width="@dimen/sizeFortySix"
            android:layout_height="@dimen/sizeFortySix"
            android:layout_margin="@dimen/sizeEight"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:contentDescription="@string/contentDescription"
            android:focusable="true"
            android:padding="@dimen/sizeEight"
            android:src="@drawable/ic_back"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.project.readyassist_mechapp.utils.MyAppBold
            android:id="@+id/tv_label_onboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sizeEight"
            android:gravity="center_vertical"
            android:letterSpacing="0.05"
            android:text="@string/label_mechapp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/headline_small"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img_onboard_back"
            app:layout_constraintEnd_toStartOf="@+id/tv_current_page_onboard"
            app:layout_constraintStart_toEndOf="@id/img_onboard_back"
            app:layout_constraintTop_toTopOf="@+id/img_onboard_back" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_current_page_onboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/sizeFour"
            android:text="1"
            android:textAppearance="@style/MyTextAppearanceBold"
            android:textColor="@color/colorGreyDark"
            android:textSize="@dimen/body_regular"
            app:layout_constraintBottom_toBottomOf="@+id/tv_label_onboard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_label_slash_onboard"
            app:layout_constraintTop_toTopOf="@+id/tv_label_onboard" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_label_slash_onboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/sizeFour"
            android:text="/"
            android:textAppearance="@style/MyTextAppearanceBold"
            android:textColor="@color/black"
            android:textSize="@dimen/body_regular"
            app:layout_constraintBottom_toBottomOf="@+id/tv_label_onboard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_total_page_onboard"
            app:layout_constraintTop_toTopOf="@+id/tv_label_onboard" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_total_page_onboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/sizeEight"
            android:padding="@dimen/sizeFour"
            android:text="6"
            android:textAppearance="@style/MyTextAppearanceBold"
            android:textColor="@color/black"
            android:textSize="@dimen/body_regular"
            app:layout_constraintBottom_toBottomOf="@+id/tv_label_onboard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_label_onboard" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/frame_onboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_gray_screen_top_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_onboard_toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>