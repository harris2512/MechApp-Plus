<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.project.readyassist_mechapp">

    <!-- Network Provide -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission. ACCESS_COARSE_LOCATION" />

    <!-- Storage -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <!-- Camera -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Call -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- Local Notification -->
    <uses-permission android:name="android.permission.VIBRATE" />


    <application
        android:name=".applications.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="${appName}"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MechApp"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup"
        tools:targetApi="n">

        <activity android:name=".screen.activity.splash.SplashScreenActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".screen.activity.signin.SignInActivity"
            android:screenOrientation="portrait"
            android:theme="@style/status_bar_transparent"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".screen.activity.homepage.HomePage"
            android:screenOrientation="portrait"
            android:theme="@style/status_bar_transparent"
            android:windowSoftInputMode="adjustPan">


        </activity>

        <activity
            android:name=".screen.activity.onboard.OnboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/status_bar_transparent"
            android:windowSoftInputMode="adjustPan">

        </activity>

        <activity
            android:name=".screen.activity.vendor_skill.VendorSkillActivity"
            android:screenOrientation="portrait"
            android:theme="@style/status_bar_transparent"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".screen.activity.order_details.OrderDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/status_bar_transparent"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".screen.activity.add_vendor_skills.AddVendorSkills"
            android:screenOrientation="portrait"
            android:theme="@style/status_bar_transparent"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".screen.activity.subscription_sales.SubscriptionSalesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/status_bar_transparent"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".screen.activity.service_providers.ServiceProvidersActivity"
            android:screenOrientation="portrait"
            android:theme="@style/status_bar_transparent"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".screen.activity.create_service_provider.CreateServiceProviderActivity"
            android:screenOrientation="portrait"
            android:theme="@style/status_bar_transparent"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".screen.activity.DummyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/status_bar_transparent"
            android:windowSoftInputMode="adjustPan">

        </activity>

        <!-- META-DATA -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${mapKey}" />


    </application>


</manifest>