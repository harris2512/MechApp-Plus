<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/colorViewBorder"
    tools:targetApi="lollipop">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="@color/colorInputFieldBg"
                android:endColor="@color/colorInputFieldBg"
                android:startColor="@color/colorInputFieldBg" />

            <corners android:radius="@dimen/sizeFour" />
            <stroke
                android:width="1dp"
                android:color="@color/colorYellowPrimary"
                android:dashGap="0.05dp" />
        </shape>
    </item>

</ripple>