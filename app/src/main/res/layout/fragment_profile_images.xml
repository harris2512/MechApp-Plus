<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingTop="@dimen/sizeTwentyTwo">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vLine_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_error_onboard_profile_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/sizeThirtyTwo"
        android:paddingEnd="@dimen/sizeThirtyTwo"
        android:textAppearance="@style/MyTextAppearance"
        android:textColor="@color/colorRedPrimary"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Profile Image-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_onboard_profile_self"
        android:layout_width="0dp"
        android:layout_height="@dimen/sizeHundred"
        android:layout_marginStart="@dimen/sizeSixteen"
        android:layout_marginTop="@dimen/sizeThirtyTwo"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/ic_profile_image"
        app:layout_constraintEnd_toEndOf="@id/vLine_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_error_onboard_profile_images"
        app:shapeAppearanceOverlay="@style/shapeableCornerLight"
        app:tint="@color/colorGreyDark" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/sizeSixteen"
        android:paddingStart="@dimen/sizeSixteen"
        android:paddingEnd="@dimen/sizeSixteen"
        android:text="Your profile image *"
        android:textAppearance="@style/MyTextAppearance"
        android:textColor="@color/colorGreyDark"
        android:textSize="@dimen/caption_regular"
        app:layout_constraintBottom_toBottomOf="@+id/img_onboard_profile_self"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/vLine_profile"
        app:layout_constraintTop_toTopOf="@+id/img_onboard_profile_self" />

    <!--Image of Garage / Workspace-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_onboard_profile_work"
        android:layout_width="0dp"
        android:layout_height="@dimen/sizeHundred"
        android:layout_marginStart="@dimen/sizeSixteen"
        android:layout_marginTop="@dimen/sizeThirtyTwo"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/ic_garage"
        app:layout_constraintEnd_toEndOf="@id/vLine_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_onboard_profile_self"
        app:shapeAppearanceOverlay="@style/shapeableCornerLight"
        app:tint="@color/colorGreyDark" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/sizeSixteen"
        android:paddingStart="@dimen/sizeSixteen"
        android:paddingEnd="@dimen/sizeSixteen"
        android:text="Your workspace / garage image"
        android:textAppearance="@style/MyTextAppearance"
        android:textColor="@color/colorGreyDark"
        android:textSize="@dimen/caption_regular"
        app:layout_constraintBottom_toBottomOf="@+id/img_onboard_profile_work"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/vLine_profile"
        app:layout_constraintTop_toTopOf="@+id/img_onboard_profile_work" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_info_onboard_profile_images_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/sizeSixteen"
        android:paddingStart="@dimen/sizeThirtyTwo"
        android:paddingEnd="@dimen/sizeThirtyTwo"
        android:text="( * ) This fields are mandatory to give us."
        android:textAppearance="@style/MyTextAppearance"
        android:textColor="@color/colorGreyDark"
        app:layout_constraintBottom_toTopOf="@+id/tv_onboard_profile_images_next" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_onboard_profile_images_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGreenPrimary"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:padding="@dimen/sizeSixteen"
        android:text="Next"
        android:textAllCaps="true"
        android:textAppearance="@style/MyTextAppearanceBold"
        android:textColor="@color/white"
        android:textSize="@dimen/body_regular"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:layout_width="@dimen/sizeThirty"
        android:layout_height="@dimen/sizeThirty"
        android:layout_marginEnd="@dimen/sizeSixteen"
        android:layout_marginBottom="@dimen/sizeSixteen"
        android:background="@drawable/ic_oval_grey"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/ic_plus_round"
        app:layout_constraintBottom_toBottomOf="@id/img_onboard_profile_self"
        app:layout_constraintEnd_toEndOf="@+id/img_onboard_profile_self"
        app:tint="@color/black" />

    <ImageButton
        android:layout_width="@dimen/sizeThirty"
        android:layout_height="@dimen/sizeThirty"
        android:layout_marginEnd="@dimen/sizeSixteen"
        android:layout_marginBottom="@dimen/sizeSixteen"
        android:background="@drawable/ic_oval_grey"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/ic_plus_round"
        app:layout_constraintBottom_toBottomOf="@id/img_onboard_profile_work"
        app:layout_constraintEnd_toEndOf="@+id/img_onboard_profile_work"
        app:tint="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>